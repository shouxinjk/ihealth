<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CheckupPackageMapper">
	
	<resultMap type="CheckupPackage" id="resultOfUser">
		<id column="CHECKUPPACKAGE_ID" property="CHECKUPPACKAGE_ID"></id>
		<result column="WORKER" property="WORKER"/>
		<result column="GENERATEDTIME" property="GENERATEDTIME"/>
		<result column="EFFECTIVEFROM" property="EFFECTIVEFROM"/>
		<result column="EXPIREON" property="EXPIREON"/>
		<result column="STATUS" property="STATUS"/>
		<result column="REVISION" property="REVISION"/>
		<result column="SYSFLAG" property="SYSFLAG"/>
		
		<association property="users" javaType="User">
			<id column="USER_ID" property="USER_ID"/>
			<result column="USERNAME" property="USERNAME"/>
		</association>
	</resultMap>
	
	<!--表名 -->
	<sql id="tableName">
		TB_CHECKUPPACKAGE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		CHECKUPPACKAGE_ID,
		WORKER,	
		GENERATEDTIME,	
		EFFECTIVEFROM,	
		EXPIREON,	
		STATUS,	
		REVISION,	
		SYSFLAG,
		USER_ID,	
		CREATEBY,	
		CREATEON
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{CHECKUPPACKAGE_ID},
		#{WORKER},	
		#{GENERATEDTIME},	
		#{EFFECTIVEFROM},	
		#{EXPIREON},	
		#{STATUS},	
		#{REVISION},	
		#{SYSFLAG},	
		#{USER_ID},
		#{CREATEBY},
		#{CREATEON}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			CHECKUPPACKAGE_ID = #{CHECKUPPACKAGE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			WORKER = #{WORKER},
			GENERATEDTIME = #{GENERATEDTIME},
			EFFECTIVEFROM = #{EFFECTIVEFROM},
			EXPIREON = #{EXPIREON},
			STATUS = #{STATUS},
			REVISION = #{REVISION},
			SYSFLAG = #{SYSFLAG},
			CREATEBY = #{CREATEBY},
			CREATEON = #{CREATEON},
			CHECKUPPACKAGE_ID = CHECKUPPACKAGE_ID
		where 
		CHECKUPPACKAGE_ID = #{CHECKUPPACKAGE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		<where>
			<if test="CHECKUPPACKAGE_ID != null and CHECKUPPACKAGE_ID != ''">
				and CHECKUPPACKAGE_ID = #{CHECKUPPACKAGE_ID}
			</if>
			<if test="USER_ID != null and USER_ID != ''">
				and USER_ID = #{USER_ID}
			</if>
		</where>
	</select>
	
	
	<!-- 通过用户ID获取体检套餐信息 -->
	<select id="findByUserId" parameterType="int" resultMap="resultOfUser">
		SELECT * FROM tb_checkuppackage
		WHERE USER_ID = #{USER_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			CHECKUPPACKAGE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- shouxin -->
</mapper>