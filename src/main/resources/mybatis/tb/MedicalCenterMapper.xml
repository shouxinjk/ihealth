<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MedicalCenterMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_MEDICALCENTER
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		NAME,	
		DESCRIPTION,	
		LOCATION,	
		ABBREVIATION,	
		TELEPHONE,	
		STATUS,	
		LOGO,	
		OPENINGTIME,	
		CREATEBY,	
		CREATEON,	
		ACCESSORY,	
		POSITION,	
		PARENTID,	
		MEDICALCENTER_ID
	</sql>
	
	<!-- 字段 -->
	<sql id="Field1">
		NAME,	
		DESCRIPTION,	
		LOCATION,	
		ABBREVIATION,	
		TELEPHONE,	
		LOGO,	
		OPENINGTIME,	
		CREATEBY,	
		CREATEON,	
		ACCESSORY,	
		POSITION,	
		PARENTID,	
		MEDICALCENTER_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NAME},	
		#{DESCRIPTION},	
		#{LOCATION},	
		#{ABBREVIATION},	
		#{TELEPHONE},	
		#{STATUS},	
		#{LOGO},	
		#{OPENINGTIME},	
		#{CREATEBY},	
		#{CREATEON},	
		#{ACCESSORY},	
		#{POSITION},	
		#{PARENTID},	
		#{MEDICALCENTER_ID}
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue1">
		#{NAME},	
		#{DESCRIPTION},	
		#{LOCATION},	
		#{ABBREVIATION},	
		#{TELEPHONE},	
		#{LOGO},	
		#{OPENINGTIME},	
		#{CREATEBY},	
		#{CREATEON},	
		#{ACCESSORY},	
		#{POSITION},	
		#{PARENTID},	
		#{MEDICALCENTER_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field1"></include>
		) values (
	<include refid="FieldValue1"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			MEDICALCENTER_ID = #{MEDICALCENTER_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			DESCRIPTION = #{DESCRIPTION},
			LOCATION = #{LOCATION},
			ABBREVIATION = #{ABBREVIATION},
			TELEPHONE = #{TELEPHONE},
			LOGO = #{LOGO},
			OPENINGTIME = #{OPENINGTIME},
			ACCESSORY = #{ACCESSORY},
			POSITION = #{POSITION},
			PARENTID = #{PARENTID},
		MEDICALCENTER_ID = MEDICALCENTER_ID
		where 
		MEDICALCENTER_ID = #{MEDICALCENTER_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			MEDICALCENTER_ID = #{MEDICALCENTER_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1 and (MEDICALCENTER_ID = #{pd.MEDICALCENTER_ID} OR PARENTID = #{pd.MEDICALCENTER_ID}) 
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			MEDICALCENTER_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- shouxin -->
</mapper>