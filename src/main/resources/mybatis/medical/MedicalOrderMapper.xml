<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MedicalOrderMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_MEDICALORDER
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		MEDICALORDER_ID,	
		MEDICALORDERNO,	
		MEDICALORDERGENERATIONTIME,	
		MEDICALORDERBOOKINGTIME,	
		MEDICALORDEREXECUTIONTIME,	
		MEDICALTOTALAMOUNT,	
		STATUS,	
		CREATEBY,	
		CREATEON
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MEDICALORDER_ID},	
		#{MEDICALORDERNO},	
		#{MEDICALORDERGENERATIONTIME},	
		#{MEDICALORDERBOOKINGTIME},	
		#{MEDICALORDEREXECUTIONTIME},	
		#{MEDICALTOTALAMOUNT},	
		#{STATUS},	
		#{CREATEBY},	
		#{CREATEON}
	</sql>
	
	<!-- 批量增加体检中心订单 -->
	<insert id="insertAll" parameterType="MedicalOrder">
		insert into 
		<include refid="tableName"></include> 
		(MEDICALORDER_ID,MEDICALORDERNO,MEDICALORDERGENERATIONTIME,MEDICALORDERBOOKINGTIME,MEDICALORDEREXECUTIONTIME,MEDICALCENTER_ID)
		values 
		<foreach item="item" index="index" collection="list" separator="," close=";">
                 (#{item.MEDICALORDER_ID},#{item.MEDICALORDERNO},#{item.MEDICALORDERGENERATIONTIME},#{item.MEDICALORDERBOOKINGTIME},#{item.MEDICALORDEREXECUTIONTIME},#{item.MEDICALCENTER_ID})
		</foreach>
	</insert>
	
		<!-- 批量增加体检中心订单下面的体检项目 -->
	<insert id="insertItemAll" parameterType="MedicalOrder">
		insert into 
		TB_MEDICALORDERITEM 
		(MEDICALORDERITEM_ID,MEDICALORDER_ID,MEDICALEXAMITEM_ID)
		values 
		<foreach item="item" index="index" collection="list" separator="," close=";">
                 (#{item.MEDICALORDERITEM_ID},#{item.MEDICALORDER_ID},#{item.MEDICALEXAMITEM_ID})
		</foreach>
	</insert>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			MEDICALORDER_ID = #{MEDICALORDER_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			MEDICALORDER_ID = #{MEDICALORDER_ID},
			MEDICALORDERNO = #{MEDICALORDERNO},
			MEDICALORDERGENERATIONTIME = #{MEDICALORDERGENERATIONTIME},
			MEDICALORDERBOOKINGTIME = #{MEDICALORDERBOOKINGTIME},
			MEDICALORDEREXECUTIONTIME = #{MEDICALORDEREXECUTIONTIME},
			MEDICALTOTALAMOUNT = #{MEDICALTOTALAMOUNT},
			STATUS = #{STATUS},
		MEDICALORDER_ID = MEDICALORDER_ID
		where 
		MEDICALORDER_ID = #{MEDICALORDER_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			MEDICALORDER_ID = #{MEDICALORDER_ID}
	</select>
	
	<!-- 通过订单ID，查询所有体检项目信息 -->
	<select id="findItemsById" parameterType="pd" resultType="pd">
		SELECT 
		  mei.*
		FROM
		  TB_MEDICALORDERITEM moi 
		  LEFT JOIN TB_MEDICALEXAMITEM mei 
		    ON moi.`MEDICALEXAMITEM_ID` = mei.`MEDICALEXAMITEM_ID` 
		WHERE moi.`MEDICALORDER_ID` = #{MEDICALORDER_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1 and MEDICALCENTER_ID = #{pd.MEDICALCENTER_ID} 
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			MEDICALORDER_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- shouxin -->
</mapper>