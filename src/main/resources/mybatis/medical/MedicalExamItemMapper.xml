<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MedicalExamItemMapper">

	<resultMap type="MedicalExamItem" id="MedicalExamItemAndCenterResultMap">
		<id column="MEDICALEXAMITEM_ID" property="MEDICALEXAMITEM_ID"/>
		<result column="NAME" property="NAME"/>
		<result column="PRICE" property="PRICE"/>
		<result column="PRICE2" property="PRICE2"/>
		<result column="TIPS" property="TIPS"/>
		<result column="STATUS" property="STATUS"/>
		<result column="CREATEBY" property="createBY"/>
		<result column="CREATEON" property="createON"/>
		<association property="center" column="MEDICALCENTER_ID" javaType="MedicalCenter">
			<id column="MEDICALCENTER_ID" property="MEDICALCENTER_ID"/>
			<result column="STATUS" property="STATUS"/>
			<result column="NAME" property="NAME"/>
			<result column="LOCATION" property="LOCATION"/>
			<result column="DESCRIPTION" property="DESCRIPTION"/>
			<result column="LOGOURL" property="LOGOURL"/>
			<result column="CREATEBY" property="createBY"/>
			<result column="CREATEON" property="createON"/>
		</association>
	</resultMap>
	
	<resultMap type="MedicalExamItem" id="MedicalExamItemResultMap">
		<id column="MEDICALEXAMITEM_ID" property="MEDICALEXAMITEM_ID"/>
		<result column="NAME" property="NAME"/>
		<result column="PRICE" property="PRICE"/>
		<result column="PRICE2" property="PRICE2"/>
		<result column="TIPS" property="TIPS"/>
		<result column="STATUS" property="STATUS"/>
		<result column="CREATEBY" property="createBY"/>
		<result column="CREATEON" property="createON"/>
	</resultMap>
	
	
	<!--表名 -->
	<sql id="tableName">
		TB_MEDICALEXAMITEM
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		NAME,	
		PRICE,	
		PRICE2,	
		TIPS,	
		STATUS,	
		CREATEBY,	
		CREATEON,	
		MEDICALEXAMITEM_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NAME},	
		#{PRICE},	
		#{PRICE2},	
		#{TIPS},	
		#{STATUS},	
		#{CREATEBY},	
		#{CREATEON},	
		#{MEDICALEXAMITEM_ID}
	</sql>
	
	<select id="listMedicalExamItemAndMedicalCenter" resultMap="MedicalExamItemAndCenterResultMap">
		select E.NAME,E.PRICE,E.STATUS,E.PRICE2,C.NAME,C.STATUS,C.LOCATION 
		from tb_medicalexamitem E LEFT JOIN tb_medicalcenter C ON E.MEDICALCENTER_ID=C.MEDICALCENTER_ID
	</select>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			MEDICALEXAMITEM_ID = #{MEDICALEXAMITEM_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			PRICE = #{PRICE},
			PRICE2 = #{PRICE2},
			TIPS = #{TIPS},
			STATUS = #{STATUS},
			CREATEBY = #{CREATEBY},
			CREATEON = #{CREATEON},
		MEDICALEXAMITEM_ID = MEDICALEXAMITEM_ID
		where 
		MEDICALEXAMITEM_ID = #{MEDICALEXAMITEM_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			MEDICALEXAMITEM_ID = #{MEDICALEXAMITEM_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			MEDICALEXAMITEM_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- shouxin -->
</mapper>