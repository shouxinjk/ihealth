<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DiseaseMapper">

	<resultMap type="Disease" id="DiseaseReultMap">
		<id column="DISEASE_ID" property="DISEASE_ID" />
		<result column="NAME" property="NAME"/>
		<result column="DESCRIPTION" property="DESCRIPTION"/>
		<result column="ISINHERITABLE" property="ISINHERITABLE"/>
		<result column="ISHIGHINCIDENCE" property="ISHIGHINCIDENCE"/>
		<result column="CREATEBY" property="CREATEBY"/>
		<result column="CREATEON" property="CREATEON"/>
	</resultMap>
	
	<resultMap type="Disease" id="DiseaseAndDiseaseCategoryReultMap">
		<id column="DISEASE_ID" property="DISEASE_ID" />
		<result column="NAME" property="NAME"/>
		<result column="DESCRIPTION" property="DESCRIPTION"/>
		<result column="ISINHERITABLE" property="ISINHERITABLE"/>
		<result column="ISHIGHINCIDENCE" property="ISHIGHINCIDENCE"/>
		<result column="CREATEBY" property="CREATEBY"/>
		<result column="CREATEON" property="CREATEON"/>
		<association property="diseaseCategory" column="DISEASECATEGORY_ID" javaType="DiseaseCategory">
				<id column="DISEASECATEGORY_ID" property="DISEASECATEGORY_ID" />
				<result column="NAME" property="NAME"/>
				<result column="DESCRIPTION" property="DESCRIPTION"/>
				<result column="CREATEBY" property="CREATEBY"/>
				<result column="CREATEON" property="CREATEON"/>
		</association>
	</resultMap>
	
	<!--疾病表名 -->
	<sql id="tableName">
		ADMIN_DISEASE
	</sql>
	
	<!--疾病分类表名 -->
	<sql id="categoryTableName">
		ADMIN_DISEASECATEGORY
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		NAME,	
		DESCRIPTION,	
		ISINHERITABLE,	
		ISHIGHINCIDENCE,	
		CREATEBY,	
		CREATEON,	
		DISEASE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NAME},	
		#{DESCRIPTION},	
		#{ISINHERITABLE},	
		#{ISHIGHINCIDENCE},	
		#{CREATEBY},	
		#{CREATEON},	
		#{DISEASE_ID}
	</sql>
	
	<!-- 字段 -->
	<sql id="Field1">
		NAME,	
		DESCRIPTION,	
		ISINHERITABLE,	
		ISHIGHINCIDENCE,	
		CREATEBY,	
		CREATEON,	
		DISEASE_ID,
		DISEASECATEGORY_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue1">
		#{NAME},	
		#{DESCRIPTION},	
		#{ISINHERITABLE},	
		#{ISHIGHINCIDENCE},	
		#{CREATEBY},	
		#{CREATEON},	
		#{DISEASE_ID},
		#{DISEASECATEGORY_ID}
	</sql>
	
	<!-- 通过疾病分类id获取疾病信息 -->
	<select id="getDiseaseAndCategoryByID" parameterType="java.lang.String" resultMap="DiseaseAndDiseaseCategoryReultMap">
		select 
		from <include refid="tableName"></include> d
		left join <include refid="categoryTableName"></include> c
		on d.DISEASEGORY_ID=C.DISEASEGORY_ID where c.DISEASEGORY_ID=#{id}
	</select>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field1"></include>
		) values (
	<include refid="FieldValue1"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			DISEASE_ID = #{DISEASE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			DESCRIPTION = #{DESCRIPTION},
			ISINHERITABLE = #{ISINHERITABLE},
			ISHIGHINCIDENCE = #{ISHIGHINCIDENCE},
		DISEASE_ID = DISEASE_ID
		where 
		DISEASE_ID = #{DISEASE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			DISEASE_ID = #{DISEASE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1 
		<if test="pd.DISEASECATEGORY_ID!= null and pd.DISEASECATEGORY_ID != ''"><!-- 检索 -->
		and DISEASECATEGORY_ID = #{pd.DISEASECATEGORY_ID}
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				
					NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					DESCRIPTION LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			DISEASE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- shouxin -->
</mapper>