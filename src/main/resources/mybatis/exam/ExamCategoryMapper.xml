<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ExamCategoryMapper">

	<resultMap type="ExamCategory" id="examCategoryResultMap">
		<id column="EXAMCATEGORY_ID" property="EXAMCATEGORY_ID" />
		<result column="DESCRIPTION" property="DESCRIPTION"/>
		<result column="NAME" property="NAME"/>
		<result column="CREATEBY" property="CREATEBY"/>
		<result column="CREATEON" property="CREATEON"/>
		<result column="PARENT_ID" property="PARENT_ID"/>
	</resultMap>
	
	
	<!--表名 -->
	<sql id="tableName">
		EXAM_EXAMCATEGORY
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		NAME,	
		DESCRIPTION,	
		CREATEBY,	
		CREATEON,	
		PARENT_ID,	
		EXAMCATEGORY_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NAME},	
		#{DESCRIPTION},	
		#{CREATEBY},	
		#{CREATEON},	
		#{PARENT_ID},	
		#{EXAMCATEGORY_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			EXAMCATEGORY_ID = #{EXAMCATEGORY_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			DESCRIPTION = #{DESCRIPTION},
			CREATEBY = #{CREATEBY},
			CREATEON = #{CREATEON},
			PARENT_ID = #{PARENT_ID},
		EXAMCATEGORY_ID = EXAMCATEGORY_ID
		where 
		EXAMCATEGORY_ID = #{EXAMCATEGORY_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			EXAMCATEGORY_ID = #{EXAMCATEGORY_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1 
		<if test="pd.EXAMCATEGORY_ID!= null and pd.EXAMCATEGORY_ID != ''"><!-- 检索 -->
		and PARENT_ID = #{pd.EXAMCATEGORY_ID}
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 通过id获取其所有子级列表 -->
	<select id="listSubExamCategoryByID" parameterType="java.lang.String" resultMap="examCategoryResultMap">
		select 
		<include refid="Field"></include> 
		from 
		<include refid="tableName"></include> 
		where PARENT_ID=#{parentID} order by name
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			EXAMCATEGORY_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- shouxin -->
</mapper>