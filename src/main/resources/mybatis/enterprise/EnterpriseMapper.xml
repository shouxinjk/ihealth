<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="EnterpriseMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TB_ENTERPRISE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		NAME,	
		ABBREVIATION,	
		LOGO,	
		TELEPHONE,	
		LOCATION,	
		STATUS,	
		POSITION,	
		BUSINESSLICENSE,	
		PARENTID,	
		ENTERPRISE_ID,
		APPKEY
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{NAME},	
		#{ABBREVIATION},	
		#{LOGO},	
		#{TELEPHONE},	
		#{LOCATION},	
		#{STATUS},	
		#{POSITION},	
		#{BUSINESSLICENSE},	
		#{PARENTID},	
		#{ENTERPRISE_ID},
		#{APPKEY}
	</sql>
	
	<!-- 根据管理员id查询该管理员属于哪个企业-->
	<select id="findadminbyuserid" parameterType="java.lang.String" resultType="java.lang.String">
		select ENTERPRISE_ID from tb_enterpriseadmin where sys_user_id = #{userId}
	</select>
	
		<!-- 根据管理员id查询该管理员属于哪个企业-->
	<select id="findAppkeyByUserid" parameterType="java.lang.String" resultType="java.lang.String">
		select e.APPKEY from tb_enterprise e , tb_enterpriseadmin ea where 
		e.ENTERPRISE_ID = ea.ENTERPRISE_ID and ea.SYS_USER_ID = #{USER_ID}; 
	</select>
	
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ENTERPRISE_ID = #{ENTERPRISE_ID}
	</delete>
	
	<!-- 删除-->
	<delete id="deleteUser" parameterType="pd">
		delete from
		sys_app_user
		where 
			USER_ID = #{USER_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			ABBREVIATION = #{ABBREVIATION},
			LOGO = #{LOGO},
			TELEPHONE = #{TELEPHONE},
			LOCATION = #{LOCATION},
			STATUS = #{STATUS},
			POSITION = #{POSITION},
			BUSINESSLICENSE = #{BUSINESSLICENSE},
			PARENTID = #{PARENTID},
		ENTERPRISE_ID = ENTERPRISE_ID
		where 
		ENTERPRISE_ID = #{ENTERPRISE_ID}
	</update>
	
	<!-- 修改 -->
	<update id="editEN" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			ABBREVIATION = #{ABBREVIATION},
			TELEPHONE = #{TELEPHONE},
			LOCATION = #{LOCATION},
			PARENTID = #{PARENTID}
		where 
		APPKEY = #{APPKEY}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			ENTERPRISE_ID = #{ENTERPRISE_ID}
	</select>
	
	<!-- 根据appk查询企业 -->
	<select id="findEnterpriseByAppkey" parameterType="java.lang.String" resultType="pd">
		select ENTERPRISE_ID,APPKEY
		from <include refid="tableName"></include> where APPKEY = #{APPKEY}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.ENTERPRISE_ID!= null and pd.ENTERPRISE_ID != ''">
			and (ENTERPRISE_ID = #{pd.ENTERPRISE_ID} or PARENTID = #{pd.ENTERPRISE_ID})
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表 -->
	<select id="dataEnterpriseUserlistPage" parameterType="page" resultType="pd">
		select sau.NAME AS NAME,sau.USER_ID as USER_ID,sau.HEIGHT AS HEIGHT,sau.WEIGHT AS WEIGHT,
		sau.BIRTHDAY AS BIRTHDAY,sau.SEX as SEX,sau.PHONE AS PHONE from sys_app_user sau , tb_enterprise e ,tb_enterpriseadmin ea 
		where sau.appkey = e.appkey and e.ENTERPRISE_ID = ea.ENTERPRISE_ID and ea.SYS_USER_ID = #{pd.SYS_USER_ID}
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ENTERPRISE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- shouxin -->
</mapper>